extends ../base

block content 
  form(method="POST")
    span.error-message #{error && error.title ? error.title : "" }
    input(name="title" placeholder="제목" required type="text" maxlength="80")
    span.error-message #{error && error.description ? error.description : "" }
    input(name="description" placeholder="설명" required type="text" minlength="20")
    input(name="hashtags" placeholder="해쉬태그. 콤마(,)로 구분" required type="text")
    input(value="비디오 수정하기" type="submit" uppercase)