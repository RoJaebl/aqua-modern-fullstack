extends ../base

block content 
  form(method="POST") 
    span.error-message #{error && error.user ? error.user : "" }
    input(placeholder="로그인 이름", name="username",type="text", required)
    input(placeholder="비밀번호", name="password",type="password", required)
    input(type="submit", value="로그인하기")
    include ../partials/social-signin
  div.auth-switch
    span Don't have an account? 
    a(href="/signup") Create one now &rarr;